<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:padding="5dp"
    android:focusable="true"
    android:background="@mipmap/ic6">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/music_placeholder"
        android:id="@+id/iv_artwork"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        android:text="songs title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingRight="50dp"
        android:paddingEnd="50dp"
        android:layout_toRightOf="@+id/iv_artwork"
        android:layout_toEndOf="@+id/iv_artwork"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_artwork"
        android:layout_toEndOf="@+id/iv_artwork"
        android:text="Artiste"
        android:layout_below="@+id/tv_title"
        android:id="@+id/tv_artist"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_alignParentTop="true"
        android:id="@+id/tv_duration"
        android:text="3:05"></TextView>

    <ImageView
        android:id="@+id/iv_play_active"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_duration"
        android:layout_marginLeft="300dp"
        android:src="@drawable/ic_play_circle_outline_white"
        android:visibility="invisible"></ImageView>

    <ImageView
        android:id="@+id/a"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_duration"
        android:layout_marginLeft="200dp"
        android:src="@drawable/ic_play_circle_outline_white"
       ></ImageView>
    <ImageView
        android:id="@+id/download"
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:onClick="showMenu"
        android:src="@drawable/ic_baseline_arrow_downward_24"></ImageView>

</RelativeLayout>
